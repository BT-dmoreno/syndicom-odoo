<odoo>
    <record id="mailing_mailing_syndicom_settings" model="ir.ui.view">
        <field name="name">mailing.mailing.syndicom.settings</field>
        <field name="model">mailing.mailing</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="mass_mailing.mailing_mailing_view_form_full_width"/>
        <field name="groups_id" eval="[(5,)]"/>
        
        <field name="arch" type="xml">
            <!---
            <xpath expr="//field[@name='mailing_model_id']" position="replace">
                
            </xpath>
            -->
            <xpath expr="//field[@name='mailing_domain']" position="replace">
                
            </xpath>

            <xpath expr="//field[@name='subject']" position="after">

                <field name="syndicom_count" />
                <field name="syndicom_mail_sender" />

                <field name="syndicom_mailing_domain_ids" widget="many2many_tags"
                       domain="[
                           ('mailing_model_id','=', mailing_model_id),
                           ('domain_usage','=', 'mailing'),
                       ]"/>

                
                <field name="syndicom_filter_ids" widget="many2many_tags"/>
                <field name="syndicom_role_ids" widget="many2many_tags"/>
                <field name="mailing_domain" widget="DomainSelector" options="{'model': 'res.partner'}" readonly="True" invisible="True" />


       
            </xpath>

       
            
        </field>
    </record>

    


</odoo>
